<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%= link_to "myRecipes", root_path, class: "btn btn-lg btn-success", id: "logo" %>
    <div class="nav_item">
      <%= link_to "link 1", "", class: "btn btn-default btn-warning" %>
    </div>
    <div class="nav_item">
      <%= link_to "link 2", "", class: "btn btn-default btn-warning" %>
    </div>
    <% if logged_in? %>
      <div class="nav_item">
        <%= link_to "New Recipe", new_recipe_path, class: "btn btn-default btn-warning" %>
      </div>
      <ul class="nav_item">
        <li class="dropdown">
          <%= link_to '#', class: 'btn btn-default btn-danger dropdown-toggle', "data-toggle" => "dropdown" do %>
            <%= current_user.chefname %> <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to "View Profile", chef_path(current_user) %></li>
            <li><%= link_to "Edit Profile", edit_chef_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to "Log Out", logout_path %></li>
          </ul>
        </li>
      </ul>
      <div class="nav-item">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <%= form_tag('/recipes', method: :get, class: 'form-group',  authenticity_token: false) do %>
                  <%= text_field_tag "search", "" , class: "search-bar form-control", placeholder: "Search" %>
                  <%= button_tag("Submit", :name => nil, class: "btn btn-default") do %>
                    <span class="glyphicon glyphicon-search"></span>
                  <% end %>
                <% end %>
            </div>
        </form>
      </div>
    <% else %>
    <div class="nav_item">
      <%= link_to "Log In", login_path, class: "btn btn-default btn-success" %>
    </div>
    <% end %>
  </div>
</header>